
<div class ="row">
  <div class="col-xs-6">

  <h2>Time to eat!!</h2>
    {{#each burgers}}
      {{#unless this.devoured}}
        <div class="panel panel-default">
          {{this.id}}
            {{this.burger_name}}
              <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST"> 
                <input type="hidden" name="devour" value="true">
                <button class ="btn btn-success type="submit">EAT ME!</button>
              </form>
            </div>
        {{/unless}}
      {{/each}}
  </div>

  <div class="col-xs-6">
    <h2>These burgers eaten...want to order another?</h2>
    <div id= "eatenBurgers">
      <ol>
        {{#each burgers}}
          {{#if this.devoured}}
            <li id="eatenBurger" class="panel panel-default">
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>
</div>


<div class ="row">
  <div class="col-xs-12">
    <center>
      <h2>Add a Burger</h2>
        <form class="create-update-form" action="burgers/insert" method="POST">

        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="text" id="newBurger" name="burger_name">
        </div>

      <button type="submit">Add Burger</button>
    </form>
    </center>
  </div>
</div>